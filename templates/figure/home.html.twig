{% extends 'base.html.twig' %}
{% block body %}

<div class="container">
<h1 class="center-align"> Bienvenue </h1>

<section class="figures">

 <div class="row">

    {% for figure in figures %}
    <div class="col s7 m6">
      <div class="card">
        <div class="card-image waves-effect waves-block waves-light">

          <img class="activator" src="./assets/images/{{ figure.LienPhoto }}" alt="photo de la figure" width="200px"
            height="200px">


        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4">{{ figure.nom }}<i
              class="material-icons right"></i></span>
          <p>{{ figure.GroupeFigure }}</p>
          <p>{{ figure.description }}</p>

        </div>
        <div class="card-action">

        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">Card Title<i class="material-icons right">close</i></span>
          <div class="video-container">
        <iframe width="853" height="480" src="{{ figure.lienVideo }}" frameborder="0" allowfullscreen></iframe>
           <a href="{{ figure.lienVideo }}">Votre vid√©o</a>
      </div>

        </div>
        </div>
        </div>


    {% endfor %}
  </div>




</section>

</div>

        {% endblock %}



