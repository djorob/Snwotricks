{% extends 'base.html.twig' %}


{% block body %}
 <section id="inscription"  class="center-align">
<h1>  Inscrivez Vous !! </h1>

<div class="row center-align">

    <div class="col s12 m7">
{{ form_start(form) }} 

{{ form_row(form.nom, { 'attr' :{ 'placeholder' : 'votre nom'}}) }}
{{ form_row(form.prenom, { 'attr' :{ 'placeholder' : 'votre prenom'}}) }}
{{ form_row(form.lien_photo, { 'attr' :{ 'placeholder' : 'lien de votre photo'}}) }}
{{ form_row(form.email, { 'attr' :{ 'placeholder' : 'votre email'}}) }}
{{ form_row(form.password, { 'attr' :{ 'placeholder' : 'votre mot de passe '}}) }}
{{ form_row(form.confirm_password, { 'attr' :{ 'placeholder' : 'confirmez votre mot de passe'}}) }}

<button type="submit" class="btn btn-outline-success">Inscription</button>

{{ form_end(form) }}

</div>

</div>

</section>





{% endblock %}